@model HumanCare.Models.AboutUs

@{
    ViewData["Title"] = "EditAboutus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Ensure layout is correctly named
}

<h2>Edit Aboutus</h2>


<hr />

<div>
    <a asp-action="AboutUsData" style="text-decoration:none; font-size: 16px; color: #007bff; padding: 5px 10px; border: 1px solid #007bff; border-radius: 5px; background-color: #f8f9fa;">&lt; Back</a>
</div>

<div class="row mt-3">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="EditAboutus" method="post">
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="AboutUsData" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
