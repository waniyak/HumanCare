@model IEnumerable<HumanCare.Models.Partner>

@{
    ViewData["Title"] = "OurPartners";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>OurPartners</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Photo))
                    {
                        <img src="~/images/@item.Photo" alt="@item.Name" style="width:100px; height:auto;" />
                    }
                    else
                    {
                        <img src="~/images/noimage.PNG" alt="No Image" style="width:100px; height:auto;" />
                    }
                </td>
                <td>
                    <a asp-controller="Partners" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a asp-controller="Partners" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a asp-controller="Partners" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
